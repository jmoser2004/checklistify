{
    "manifest_version": 3,
    "name": "Checklistify",
    "version": "2.0.0",
    "description": "An extension that allows the user to create a simple checklist, includes ChatGPT integration allowing for easy checklist generation",
    "icons": {
        "128": "icons/icon128.png",
        "32": "icons/icon32.png",
        "16": "icons/icon16.png"
    },
    "action": {
        "default_icon": "icons/icon32.png",
        "default_popup": "popup.html"
    },
    "options_page" : "options.html",
    "permissions": [
        "storage"
    ]
}